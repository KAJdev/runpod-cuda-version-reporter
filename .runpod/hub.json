{
  "title": "Runpod Cuda Version Reporter",
  "description": "This is a simple tool to report the cuda version of the current environment",
  "type": "serverless",
  "category": "utility",
  "iconUrl": "https://avatars.githubusercontent.com/u/37021919",
  "config": {
    "endpointType": "LB",
    "runsOn": "CPU",
    "cpuFlavor": "cpu5c-8-16",
    "containerDiskInGb": 20,
    "presets": [
      {
        "name": "Preset 1",
        "defaults": {
          "STATIC_1": "value_1",
          "STRING_1": "default value 1",
          "OPTION_1": "value_1",
          "NUMBER_1": 10,
          "BOOLEAN_1": false
        }
      },
      {
        "name": "Preset 2",
        "defaults": {
          "STATIC_1": "value_2",
          "STRING_1": "default value 2",
          "OPTION_1": "value_2",
          "NUMBER_1": 15,
          "BOOLEAN_1": true
        }
      },
      {
        "name": "Preset 3",
        "defaults": {
          "STATIC_1": "value_3",
          "STRING_1": "default value 3",
          "OPTION_1": "value_3",
          "NUMBER_1": 20,
          "BOOLEAN_1": false
        }
      }
    ],
    "env": [
      {
        "key": "STATIC_1",
        "value": "value_1_new_new"
      },
      {
        "key": "STRING_1_NEW",
        "input": {
          "name": "String Input",
          "type": "string",
          "description": "A string input test",
          "default": "new default value"
        }
      },
      {
        "key": "OPTION_1",
        "input": {
          "name": "Option Input",
          "type": "string",
          "description": "An option input test",
          "options": [
            {
              "label": "value 1",
              "value": "value_1"
            },
            {
              "label": "value 2",
              "value": "value_2"
            },
            {
              "label": "value 3",
              "value": "value_3"
            }
          ],
          "default": "value_2"
        }
      },
      {
        "key": "NUMBER_1",
        "input": {
          "name": "Number Input",
          "type": "number",
          "description": "A number input test",
          "min": 5,
          "max": 20,
          "default": 15
        }
      },
      {
        "key": "BOOLEAN_1",
        "input": {
          "type": "boolean",
          "name": "Boolean Input",
          "description": "A boolean input with toggle values",
          "default": true,
          "trueValue": "this is true",
          "falseValue": "this is false"
        }
      }
    ]
  }
}
